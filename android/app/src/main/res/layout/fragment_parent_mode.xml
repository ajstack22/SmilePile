<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parent Mode - Import Photos"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Category:"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/manageCategoriesButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Manage Categories"
        android:textSize="16sp"
        app:icon="@android:drawable/ic_menu_manage"
        app:iconGravity="start"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/importPhotosButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Select Photos to Import"
        android:textSize="18sp"
        app:icon="@drawable/ic_add_photo"
        app:iconGravity="start"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/selectedCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No photos selected"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selectedPhotosRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <Button
        android:id="@+id/exitParentModeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit Parent Mode"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

</LinearLayout>