<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main Theme with Material Design 3 -->
    <style name="Theme.SmilePile" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>
    </style>

    <!-- Child-Friendly Theme -->
    <style name="Theme.SmilePile.ChildFriendly" parent="Theme.SmilePile">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/smile_primary</item>
        <item name="colorPrimaryVariant">@color/smile_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/smile_secondary</item>
        <item name="colorSecondaryVariant">@color/smile_secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/smile_background_light</item>
        <item name="colorSurface">@color/smile_background_surface</item>
        <item name="colorOnBackground">@color/smile_text_primary</item>
        <item name="colorOnSurface">@color/smile_text_primary</item>

        <!-- High contrast text -->
        <item name="android:textColorPrimary">@color/smile_text_primary</item>
        <item name="android:textColorSecondary">@color/smile_text_secondary</item>
        <item name="android:textColorHint">@color/smile_text_hint</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/smile_primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/smile_background_light</item>

        <!-- Typography - child-friendly text styles -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.SmilePile.Headline</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.SmilePile.Title</item>
        <item name="textAppearanceBody1">@style/TextAppearance.SmilePile.Body</item>
        <item name="textAppearanceButton">@style/TextAppearance.SmilePile.Button</item>

        <!-- Widget styles - child-friendly components -->
        <item name="materialButtonStyle">@style/Widget.SmilePile.Button</item>
        <item name="materialCardViewStyle">@style/Widget.SmilePile.Card</item>
        <item name="bottomNavigationStyle">@style/Widget.SmilePile.BottomNavigation</item>

        <!-- Ripple and selection colors -->
        <item name="colorControlHighlight">@color/smile_ripple</item>
        <item name="android:colorControlActivated">@color/smile_primary</item>
    </style>

    <!-- Full Screen Theme for Photo Viewer -->
    <style name="Theme.SmilePile.FullScreen" parent="Theme.SmilePile.ChildFriendly">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Text Appearance Styles for Child-Friendly Typography -->
    <style name="TextAppearance.SmilePile.Headline" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textColor">@color/smile_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.SmilePile.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/smile_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.SmilePile.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/smile_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextAppearance.SmilePile.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.SmilePile.BottomNav" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/smile_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Widget Styles for Child-Friendly Components -->
    <style name="Widget.SmilePile.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">@dimen/touch_target_min</item>
        <item name="android:minWidth">@dimen/touch_target_extra_large</item>
        <item name="android:textAppearance">@style/TextAppearance.SmilePile.Button</item>
        <item name="backgroundTint">@color/smile_primary</item>
        <item name="cornerRadius">@dimen/corner_radius_large</item>
        <item name="elevation">@dimen/elevation_medium</item>
        <item name="rippleColor">@color/smile_ripple</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
    </style>

    <style name="Widget.SmilePile.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/corner_radius_medium</item>
        <item name="cardElevation">@dimen/elevation_medium</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="contentPadding">@dimen/spacing_medium</item>
        <item name="rippleColor">@color/smile_ripple</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.SmilePile.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.SmilePile.BottomNav</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.SmilePile.BottomNav</item>
        <item name="itemIconSize">@dimen/spacing_extra_large</item>
        <item name="itemRippleColor">@color/smile_ripple</item>
        <item name="elevation">@dimen/elevation_medium</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Button variants for different contexts -->
    <style name="Widget.SmilePile.Button.Secondary" parent="Widget.SmilePile.Button">
        <item name="backgroundTint">@color/smile_secondary</item>
    </style>

    <style name="Widget.SmilePile.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/touch_target_min</item>
        <item name="android:minWidth">@dimen/touch_target_extra_large</item>
        <item name="android:textAppearance">@style/TextAppearance.SmilePile.Button</item>
        <item name="android:textColor">@color/smile_primary</item>
        <item name="strokeColor">@color/smile_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">@dimen/corner_radius_large</item>
        <item name="rippleColor">@color/smile_ripple</item>
    </style>

</resources>