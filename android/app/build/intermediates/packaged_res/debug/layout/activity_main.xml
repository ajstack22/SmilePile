<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/smile_background_light"
    tools:context=".ui.MainActivity">

    <!-- AppBar for navigation and app title -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/elevation_medium"
        app:elevation="@dimen/elevation_medium">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/smile_primary"
            android:minHeight="@dimen/touch_target_min"
            app:title="SmilePile"
            app:titleTextColor="@color/white"
            app:titleTextAppearance="@style/TextAppearance.SmilePile.Title" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main content area with ViewPager2 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spacing_medium"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingBottom="@dimen/spacing_extra_large" />

    <!-- Bottom navigation with large touch targets -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/touch_target_extra_large"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:elevation="@dimen/elevation_medium"
        app:elevation="@dimen/elevation_medium"
        app:itemIconSize="@dimen/spacing_extra_large"
        app:itemTextAppearanceActive="@style/TextAppearance.SmilePile.BottomNav"
        app:itemTextAppearanceInactive="@style/TextAppearance.SmilePile.BottomNav"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu" />

    <!-- Floating Action Button for adding photos -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_medium"
        android:src="@drawable/ic_add_photo_24"
        android:contentDescription="@string/add_photo"
        app:backgroundTint="@color/smile_secondary"
        app:tint="@color/white"
        app:fabSize="normal"
        app:elevation="@dimen/elevation_high"
        android:minWidth="@dimen/touch_target_min"
        android:minHeight="@dimen/touch_target_min" />

    <!-- Loading indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:indicatorColor="@color/smile_primary"
        app:trackColor="@color/smile_primary_light"
        tools:visibility="visible" />

    <!-- Empty state view -->
    <LinearLayout
        android:id="@+id/empty_state_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_huge"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/empty_state_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="@dimen/spacing_large"
            android:src="@drawable/ic_photo_library_empty"
            android:contentDescription="@string/empty_photo_library"
            app:tint="@color/smile_text_hint" />

        <TextView
            android:id="@+id/empty_state_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:text="@string/no_photos_yet"
            android:textAppearance="@style/TextAppearance.SmilePile.Headline"
            android:textColor="@color/smile_text_primary"
            android:gravity="center" />

        <TextView
            android:id="@+id/empty_state_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            android:text="@string/add_photos_to_get_started"
            android:textAppearance="@style/TextAppearance.SmilePile.Body"
            android:textColor="@color/smile_text_secondary"
            android:gravity="center" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_first_photo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/touch_target_min"
            android:text="@string/add_your_first_photo"
            android:textAppearance="@style/TextAppearance.SmilePile.Button"
            android:minWidth="@dimen/touch_target_extra_large"
            app:backgroundTint="@color/smile_primary"
            app:cornerRadius="@dimen/corner_radius_large"
            app:icon="@drawable/ic_add_photo_24"
            app:iconGravity="textStart"
            app:rippleColor="@color/smile_ripple" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>