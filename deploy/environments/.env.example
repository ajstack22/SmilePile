# Quality Environment
QUAL_ANDROID_KEYSTORE=/path/to/qual-keystore.jks
QUAL_ANDROID_KEYSTORE_PASSWORD=qual-keystore-password
QUAL_ANDROID_KEY_ALIAS=qual-key-alias
QUAL_ANDROID_KEY_PASSWORD=qual-key-password

# Production Environment
PROD_ANDROID_KEYSTORE=/path/to/prod-keystore.jks
PROD_ANDROID_KEYSTORE_PASSWORD=prod-keystore-password
PROD_ANDROID_KEY_ALIAS=prod-key-alias
PROD_ANDROID_KEY_PASSWORD=prod-key-password

