# ============================================================================
# SmilePile Development Environment Configuration
# ============================================================================
# Configuration for local development
# This file should be committed to version control

# Include base configuration
# Source base.env when loading this environment

# Environment Identification
ENVIRONMENT_NAME="development"
ENVIRONMENT_TYPE="development"
ENVIRONMENT_COLOR="#00FF00"

# API Configuration
API_BASE_URL="http://localhost:8080/api"
API_TIMEOUT="60"
API_RETRY_COUNT="1"
API_USE_MOCK="true"

# Database Configuration
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_NAME="smilepile_dev"
DATABASE_POOL_SIZE="5"

# Build Configuration Overrides
ENABLE_PROGUARD="false"
ENABLE_MINIFICATION="false"
ENABLE_RESOURCE_SHRINKING="false"
ENABLE_OBFUSCATION="false"

# Debug Configuration
DEBUG_MODE="true"
ENABLE_DEBUG_MENU="true"
ENABLE_PERFORMANCE_MONITORING="true"
ENABLE_NETWORK_LOGGING="true"
ENABLE_VERBOSE_LOGGING="true"
LOG_LEVEL="DEBUG"

# Testing Configuration
RUN_UNIT_TESTS="true"
RUN_INTEGRATION_TESTS="false"
RUN_UI_TESTS="false"
MIN_TEST_COVERAGE="50"

# Security Overrides (Relaxed for Development)
ENABLE_CERTIFICATE_PINNING="false"
ENABLE_ROOT_DETECTION="false"
ENABLE_TAMPER_DETECTION="false"
ALLOW_HTTP_TRAFFIC="true"

# Development Features
HOT_RELOAD_ENABLED="true"
LIVE_RELOAD_ENABLED="true"
SOURCE_MAPS_ENABLED="true"
SHOW_ERROR_OVERLAY="true"

# Mock Data Configuration
USE_MOCK_DATA="true"
MOCK_USER_COUNT="10"
MOCK_PHOTO_COUNT="100"
MOCK_DELAY_MS="500"

# Local Storage
LOCAL_STORAGE_PATH="./dev_storage"
CACHE_ENABLED="false"
CLEAR_CACHE_ON_START="true"

# Notification Overrides
NOTIFY_ON_SUCCESS="false"
NOTIFY_ON_FAILURE="true"
NOTIFICATION_CHANNELS="console"

# Development Tools Integration
CHROME_DEVTOOLS_ENABLED="true"
REACT_DEVTOOLS_ENABLED="true"
REDUX_DEVTOOLS_ENABLED="true"

# Local Signing (Android)
ANDROID_DEBUG_KEYSTORE="${HOME}/.android/debug.keystore"
ANDROID_DEBUG_KEY_ALIAS="androiddebugkey"
ANDROID_DEBUG_KEYSTORE_PASSWORD="android"
ANDROID_DEBUG_KEY_PASSWORD="android"

# Local Signing (iOS)
IOS_CODE_SIGN_IDENTITY="iPhone Developer"
IOS_DEVELOPMENT_TEAM="AUTO"
IOS_PROVISIONING_PROFILE="Automatic"

# Feature Flags (Development Overrides)
FEATURE_EXPERIMENTAL="true"
FEATURE_DEV_TOOLS="true"
FEATURE_TEST_MODE="true"

# Asset Configuration
ASSET_BASE_URL="http://localhost:8080/assets"
USE_LOCAL_ASSETS="true"

# Simulator/Emulator Configuration
ANDROID_EMULATOR="Pixel_4_API_31"
IOS_SIMULATOR="iPhone 14"

# Development Server
DEV_SERVER_HOST="localhost"
DEV_SERVER_PORT="3000"
WEBPACK_DEV_SERVER_PORT="8081"

# Code Quality
RUN_LINTER="true"
RUN_FORMATTER="true"
FIX_LINT_ERRORS="true"
FORMAT_ON_SAVE="true"