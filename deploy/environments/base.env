# ============================================================================
# SmilePile Base Environment Configuration
# ============================================================================
# Common configuration shared across all environments
# This file should be committed to version control

# Application Information
APP_NAME="SmilePile"
APP_IDENTIFIER="com.smilepile.app"
APP_DESCRIPTION="Photo gallery app for families"

# Version Management
APP_VERSION="1.0.0"
BUILD_NUMBER="1"
VERSION_CODE="1"

# Platform Configuration
ANDROID_MIN_SDK="24"
ANDROID_TARGET_SDK="33"
ANDROID_COMPILE_SDK="33"
IOS_DEPLOYMENT_TARGET="14.0"

# Build Configuration
ENABLE_PROGUARD="true"
ENABLE_MINIFICATION="true"
ENABLE_RESOURCE_SHRINKING="true"
ENABLE_BITCODE="false"
ENABLE_DSYM="true"

# Testing Configuration
RUN_UNIT_TESTS="true"
RUN_INTEGRATION_TESTS="true"
RUN_UI_TESTS="false"
MIN_TEST_COVERAGE="70"
TEST_TIMEOUT="600"

# Security Configuration
ENABLE_CERTIFICATE_PINNING="true"
ENABLE_ROOT_DETECTION="true"
ENABLE_TAMPER_DETECTION="true"
ENABLE_OBFUSCATION="true"

# Logging Configuration
LOG_LEVEL="INFO"
ENABLE_CRASH_REPORTING="true"
ENABLE_ANALYTICS="true"

# Deployment Configuration
DEPLOY_TIMEOUT="600"
DEPLOY_RETRY_COUNT="3"
ROLLBACK_ENABLED="true"
BACKUP_BEFORE_DEPLOY="true"

# Artifact Management
ARTIFACT_RETENTION_DAYS="30"
MAX_ARTIFACT_SIZE_MB="500"
COMPRESS_ARTIFACTS="true"

# Notification Configuration
NOTIFY_ON_SUCCESS="true"
NOTIFY_ON_FAILURE="true"
NOTIFICATION_CHANNELS="log"

# Resource Limits
MAX_APK_SIZE_MB="100"
MAX_IPA_SIZE_MB="200"
MAX_MEMORY_MB="2048"
MAX_BUILD_TIME_MINUTES="30"

# Feature Flags (Default Values)
FEATURE_KIDS_MODE="true"
FEATURE_PARENTAL_CONTROLS="true"
FEATURE_CLOUD_BACKUP="false"
FEATURE_AI_CATEGORIZATION="false"
FEATURE_FACE_RECOGNITION="false"
FEATURE_SHARING="true"
FEATURE_EDITING="true"
FEATURE_FILTERS="true"

# Third-party Integration Flags
ENABLE_FIREBASE="true"
ENABLE_GOOGLE_ANALYTICS="false"
ENABLE_CRASHLYTICS="true"
ENABLE_APP_CENTER="false"

# Development Tools
ENABLE_DEBUG_MENU="false"
ENABLE_PERFORMANCE_MONITORING="false"
ENABLE_NETWORK_LOGGING="false"

# CI/CD Configuration
CI_PLATFORM="none"
PARALLEL_JOBS="4"
CACHE_DEPENDENCIES="true"

# Git Configuration
GIT_BRANCH_PATTERN="^(main|develop|staging|feature/.*|bugfix/.*|hotfix/.*)$"
REQUIRE_SIGNED_COMMITS="false"
AUTO_TAG_RELEASES="true"