---
interface Props {
  question: string;
  answer: string;
  id: string;
}

const { question, answer, id } = Astro.props;
---

<details class="group border-b border-gray-200 py-4" id={id}>
  <summary class="flex justify-between items-center cursor-pointer list-none focus-visible-ring rounded p-2">
    <h3 class="text-lg font-semibold text-gray-900">{question}</h3>
    <svg
      class="w-5 h-5 text-gray-500 transition-transform group-open:rotate-45"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
      aria-hidden="true"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
    </svg>
  </summary>
  <div class="mt-4 pl-0">
    <p class="text-gray-600" set:html={answer}></p>
  </div>
</details>

<style>
  summary::-webkit-details-marker {
    display: none;
  }
</style>
