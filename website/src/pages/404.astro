---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout
  title="Page Not Found - SmilePile"
  description="The page you're looking for doesn't exist."
>
  <Header slot="header" />

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-20 text-center">
    <div class="mb-8">
      <svg class="w-24 h-24 text-gray-400 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    </div>
    
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Page Not Found</h1>
    <p class="text-xl text-gray-600 mb-8">
      Sorry, we couldn't find the page you're looking for.
    </p>
    
    <a 
      href="/" 
      class="inline-flex items-center bg-primary-600 text-white px-8 py-3 rounded-lg hover:bg-primary-700 transition-colors focus-visible-ring font-semibold"
    >
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
      </svg>
      Go to Homepage
    </a>
  </div>

  <Footer slot="footer" />
</BaseLayout>
